      "prettier"
    ],
    "env": {
      "node": true,
      "es2017": true
    }
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 120
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run pretty-quick --staged",
      "pre-push": "npm run lint"
    }
  }
