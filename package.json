  "description": "Automated visual regression testing",
  "main": "index.js",
  "bin": {
    "visual-test": "cli.js",
    "screeny": "cli.js"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "scripts": {
    "start": "node cli.js",
    "init": "node cli.js reference",
    "approve": "node cli.js approve",
    "lint": "eslint --ignore-path .gitignore  --ignore-pattern engine/*  .",
    "pretty-quick": "pretty-quick"
  },
  "engines": {
    "node": ">=10"
  },
  "files": [
    "cli.js",
    "index.js",
    "engine",
    "lib"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:jungvonmatt/visual-test.git"
  },
  "author": "Ben ZÃ¶rb",
  "dependencies": {
    "backstopjs": "^4.5.1",
    "chalk": "^4.0.0",
    "find-up": "^4.1.0",
    "globby": "^11.0.0",
    "got": "^11.0.1",
    "inquirer": "^7.1.0",
    "meow": "^6.1.0",
    "node-fetch": "^2.6.0",
    "slugify": "^1.4.0",
    "xdg-basedir": "^4.0.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "prettier": "^2.0.4",
    "pretty-quick": "^2.0.1"
  },
  "eslintConfig": {
    "plugins": [
      "prettier"
